extends layout
block content
    h1 #{title}
    hr
    p #[strong Do you really want to delete this book instance?]
    p #[strong Book Title: ]#{bookinstance.book.title}
    p #[strong ID: ] #{bookinstance._id}
    p #[strong Imprint: ] #{bookinstance.imprint}
    p #[strong Status: ] #{bookinstance.status}
    p #[strong Due: ] #{bookinstance.due_back_formatted} 
    form(method='POST' action='')
        div.form-group
            input#bookinstanceid.form-control(type='hidden', value=bookinstance._id, name='bookinstanceid', required='true')
        button.btn.btn-primary(type='submit') Delete 